<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
 

  <display-name>Archetype Created Web Application</display-name> 

    <servlet>
        <servlet-name>DDIServlet</servlet-name>
        <servlet-class>com.ddi.DDIServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>com.ddi.SearchServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>drug_ajax</servlet-name>
        <servlet-class>com.ddi.drug_ajax</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DDIServlet</servlet-name>
        <url-pattern>/submit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/SearchServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>drug_ajax</servlet-name>
        <url-pattern>/drug_ajax</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>submit</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
